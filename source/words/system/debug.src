; *****************************************************************************
;
;				This is x16-emulator only and dumps and exits
;
; *****************************************************************************

ExitDump: ;; xdump <0>
		tsx 								; save Data Stack in temp1
		stx 	temp1
		jmp 	$FFFF 						; makes the X16-Emulator dump-exit.

; *****************************************************************************
;
;							X16 Emulator forces a break
;
; *****************************************************************************

BreakCmd:	;; xbreak noexec <0>
		.byte 	$FF
		jmp 	Next